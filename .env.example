# ============================
# HubSpot (Required)
# ============================
HUBSPOT_ACCESS_TOKEN=your_hubspot_token_here

# ============================
# AI Settings
# ============================
AI_PROVIDER=gemini            # gemini (free) or openrouter (paid)
AI_API_KEY=your_ai_key_here
AI_MODEL=gemini-1.5-flash     # default

# If using OpenRouter instead:
# AI_PROVIDER=openrouter
# AI_API_KEY=your_openrouter_key_here
# OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# ============================
# Optional Integrations
# ============================
CRUNCHBASE_API_KEY=your_crunchbase_key_here
APOLLO_API_KEY=your_apollo_key_here
GOOGLE_NEWS_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# ============================
# Agent Settings
# ============================
SCAN_MONTHS_BACK=12
MINIMUM_DEAL_VALUE=0
CONFIDENCE_THRESHOLD=7
